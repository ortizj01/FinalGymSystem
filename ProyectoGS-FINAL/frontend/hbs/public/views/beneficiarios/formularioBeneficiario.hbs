<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Agregar Beneficiario y Valoración Médica</title>
    {{> header}}
    <link rel="stylesheet" href="../assets/css/BeneficiariosStyle/validacionesFormsBeneficiario.css" />
</head>
<body onload="inicializarBusquedaCliente()">
    <!-- Inicio del cargar -->
    <div id="loading">
        <div class="loader simple-loader">
            <div class="loader-body"></div>
        </div>
    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->
    {{> sidebar}}
    <!-- Fin Barra lateral -->

    <!-- Inicio Barra superior -->
    {{> topbar}}
    <!-- Fin Barra superior -->

    <!-- Inicio contenido -->
    <div class="container-fluid content-inner">
        <div class="row">
            <div class="col-sm-12 col-lg-12">
                <div class="card">
                    <div class="card-header py-6">
                        <h3 class="m-0 font-weight-bold text-primary">Agregar Beneficiario</h3>
                    </div>
                    <div class="card-body">
                        <form id="formularioRegistro">
                            <div class="row">
                                <!-- Tipo de Documento -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__tipoDocumento">
                                        <div class="formulario__grupo-input">
                                            <label for="tipoDocumento" class="formulario__label">Tipo de Documento *</label>
                                            <select class="form-control" name="tipoDocumento" id="tipoDocumento" aria-describedby="tipoDocumentoHelp" required>
                                                <option value="">Seleccione Tipo de Documento</option>
                                                <option value="cedula_ciudadania">Cédula de Ciudadanía</option>
                                                <option value="pasaporte">Pasaporte</option>
                                                <option value="tarjeta_identidad">Tarjeta de Identidad</option>
                                            </select>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Seleccione un tipo de documento válido</p>
                                        <small id="tipoDocumentoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Documento -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__documento">
                                        <div class="formulario__grupo-input">
                                            <label for="documento" class="formulario__label">Documento *</label>
                                            <input type="text" class="form-control" name="documento" id="documento" aria-describedby="documentoHelp" placeholder="Ingrese Documento" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Ingrese un documento válido</p>
                                        <small id="documentoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Nombres -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__nombres">
                                        <div class="formulario__grupo-input">
                                            <label for="nombres" class="formulario__label">Nombres *</label>
                                            <input type="text" class="form-control" name="nombres" id="nombres" aria-describedby="nombresHelp" placeholder="Ingrese Nombres" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Los nombres no pueden contener números o caracteres especiales</p>
                                        <small id="nombresHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Apellidos -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__apellidos">
                                        <div class="formulario__grupo-input">
                                            <label for="apellidos" class="formulario__label">Apellidos *</label>
                                            <input type="text" class="form-control" name="apellidos" id="apellidos" aria-describedby="apellidosHelp" placeholder="Ingrese Apellidos" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Los apellidos no pueden contener números o caracteres especiales</p>
                                        <small id="apellidosHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Correo Electrónico -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__correo">
                                        <div class="formulario__grupo-input">
                                            <label for="correo" class="formulario__label">Correo Electrónico *</label>
                                            <input type="email" class="form-control" name="correo" id="correo" aria-describedby="correoHelp" placeholder="Ingrese Correo Electrónico" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">El correo no es válido</p>
                                        <small id="correoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Teléfono -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__telefono">
                                        <div class="formulario__grupo-input">
                                            <label for="telefono" class="formulario__label">Teléfono *</label>
                                            <input type="text" class="form-control" name="telefono" id="telefono" aria-describedby="telefonoHelp" placeholder="Ingrese Teléfono" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">El número no es válido</p>
                                        <small id="telefonoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Fecha de Nacimiento -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__fechaDeNacimiento">
                                        <div class="formulario__grupo-input">
                                            <label for="fechaDeNacimiento" class="formulario__label">Fecha de Nacimiento *</label>
                                            <input type="date" class="form-control" name="fechaDeNacimiento" id="fechaDeNacimiento" aria-describedby="fechaDeNacimientoHelp" placeholder="Ingrese Fecha de Nacimiento" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Ingresa una fecha de nacimiento válida</p>
                                        <small id="fechaDeNacimientoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Dirección -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__direccion">
                                        <div class="formulario__grupo-input">
                                            <label for="direccion" class="formulario__label">Dirección *</label>
                                            <input type="text" class="form-control" name="direccion" id="direccion" aria-describedby="direccionHelp" placeholder="Ingrese Dirección" required/>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Ingresa una dirección válida</p>
                                        <small id="direccionHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Género -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__genero">
                                        <div class="formulario__grupo-input">
                                            <label for="genero" class="formulario__label">Género *</label>
                                            <select class="form-control" name="genero" id="genero" aria-describedby="generoHelp" required>
                                                <option value="">Seleccione Género</option>
                                                <option value="Masculino">Masculino</option>
                                                <option value="Femenino">Femenino</option>
                                            </select>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Seleccione un género válido</p>
                                        <small id="generoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Contraseña -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__contrasena">
                                        <div class="formulario__grupo-input">
                                            <label for="contrasena" class="formulario__label">Contraseña *</label>
                                            <div class="input-group">
                                                <input type="password" class="form-control" name="contrasena" id="contrasena" aria-describedby="contrasenaHelp" placeholder="Ingrese una contraseña" required/>
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                                        <span class="fa-regular fa-eye-slash fa-xl me-2"></span>
                                                    </button>
                                                </div>
                                            </div>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Contraseña inválida</p>
                                        <small id="contrasenaHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>

                                <!-- Confirmar Contraseña -->
                                <div class="col-lg-6">
                                    <div class="form-group formulario__grupo" id="grupo__confirmarContrasena">
                                        <div class="formulario__grupo-input">
                                            <label for="confirmarContrasena" class="formulario__label">Confirmar Contraseña *</label>
                                            <div class="input-group">
                                                <input type="password" class="form-control" name="confirmarContrasena" id="confirmarContrasena" aria-describedby="confirmarContrasenaHelp" placeholder="Confirme Contraseña" required/>
                                                <div class="input-group-append">
                                                    <button class="btn btn-outline-secondary" type="button" id="toggleConfirmPassword">
                                                        <span class="fa-regular fa-eye-slash fa-xl me-2"></span>
                                                    </button>
                                                </div>
                                            </div>
                                            <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                        </div>
                                        <p class="formulario__input-error">Las contraseñas no coinciden</p>
                                        <small id="confirmarContrasenaHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>

                                <!-- Estado (Oculto) -->
                                <div class="col-md-6" style="display: none;">
                                    <div class="form-group formulario__grupo" id="grupo__estado">
                                        <div class="formulario__grupo-input">
                                            <label for="estado" class="formulario__label">Estado *</label>
                                            <input type="hidden" name="estado" id="estado" value="1">
                                            <input type="text" class="form-control" value="Activo" disabled>
                                        </div>
                                        <small id="estadoHelp" class="form-text text-muted"><br></small>
                                    </div>
                                </div>
                                <!-- Cliente -->
                                <div class="col-md-6">
                                    <div class="form-group formulario__grupo" id="grupo__cliente">
                                        <label for="buscarCliente">Buscar Cliente por Documento *</label>
                                        <input type="text" class="form-control" name="buscarCliente" id="buscarCliente" placeholder="Ingrese Documento del Cliente" required />
                                        <input type="hidden" name="cliente" id="cliente">
                                        <div id="resultadosBusqueda" class="list-group mt-2"></div>
                                    </div>
                                </div>
                                <!-- Cliente Seleccionado -->
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label for="nombreClienteSeleccionado">Cliente Seleccionado</label>
                                        <input type="text" class="form-control" id="nombreClienteSeleccionado" name="nombreClienteSeleccionado" readonly>
                                    </div>
                                </div>

                                <!-- Datos de la Valoración Médica -->
                                <div class="card-header py-6 text-center mb-4">
                                    <h3 class="m-0 font-weight-bold text-primary">Datos de la Valoración Médica</h3>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__TieneCondicionCronica">
                                            <div class="formulario__grupo-input">
                                                <label for="TieneCondicionCronica" class="formulario__label">¿Tiene Condición Crónica? *</label>
                                                <select class="form-control" name="TieneCondicionCronica" id="TieneCondicionCronica" aria-describedby="TieneCondicionCronicaHelp" required>
                                                    <option value="">Seleccione una opción</option>
                                                    <option value="si">Sí</option>
                                                    <option value="no">No</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione una opción válida</p>
                                            <small id="TieneCondicionCronicaHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__CirugiaPrevia">
                                            <div class="formulario__grupo-input">
                                                <label for="CirugiaPrevia" class="formulario__label">¿Cirugía Previa? *</label>
                                                <select class="form-control" name="CirugiaPrevia" id="CirugiaPrevia" aria-describedby="CirugiaPreviaHelp" required>
                                                    <option value="">Seleccione una opción</option>
                                                    <option value="si">Sí</option>
                                                    <option value="no">No</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione una opción válida</p>
                                            <small id="CirugiaPreviaHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__AlergiasConocidas">
                                            <div class="formulario__grupo-input">
                                                <label for="AlergiasConocidas" class="formulario__label">Alergias Conocidas *</label>
                                                <input type="text" class="form-control" name="AlergiasConocidas" id="AlergiasConocidas" aria-describedby="AlergiasConocidasHelp" placeholder="Ingrese Alergias Conocidas" required/>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Ingrese alergias conocidas válidas</p>
                                            <small id="AlergiasConocidasHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__MedicamentosActuales">
                                            <div class="formulario__grupo-input">
                                                <label for="MedicamentosActuales" class="formulario__label">Medicamentos Actuales *</label>
                                                <input type="text" class="form-control" name="MedicamentosActuales" id="MedicamentosActuales" aria-describedby="MedicamentosActualesHelp" placeholder="Ingrese Medicamentos Actuales" required/>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Ingrese medicamentos actuales válidos</p>
                                            <small id="MedicamentosActualesHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__LesionesMusculoesqueleticas">
                                            <div class="formulario__grupo-input">
                                                <label for="LesionesMusculoesqueleticas" class="formulario__label">Lesiones Musculoesqueléticas *</label>
                                                <select class="form-control" name="LesionesMusculoesqueleticas" id="LesionesMusculoesqueleticas" aria-describedby="LesionesMusculoesqueleticasHelp" required>
                                                    <option value="">Seleccione una opción</option>
                                                    <option value="si">Sí</option>
                                                    <option value="no">No</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione una opción válida</p>
                                            <small id="LesionesMusculoesqueleticasHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__EnfermedadCardiacaVascular">
                                            <div class="formulario__grupo-input">
                                                <label for="EnfermedadCardiacaVascular" class="formulario__label">Enfermedad Cardíaca o Vascular *</label>
                                                <select class="form-control" name="EnfermedadCardiacaVascular" id="EnfermedadCardiacaVascular" aria-describedby="EnfermedadCardiacaVascularHelp" required>
                                                    <option value="">Seleccione una opción</option>
                                                    <option value="si">Sí</option>
                                                    <option value="no">No</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione una opción válida</p>
                                            <small id="EnfermedadCardiacaVascularHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__AntecedentesFamiliares">
                                            <div class="formulario__grupo-input">
                                                <label for="AntecedentesFamiliares" class="formulario__label">Antecedentes Familiares *</label>
                                                <select class="form-control" name="AntecedentesFamiliares" id="AntecedentesFamiliares" aria-describedby="AntecedentesFamiliaresHelp" required>
                                                    <option value="">Seleccione una opción</option>
                                                    <option value="si">Sí</option>
                                                    <option value="no">No</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione una opción válida</p>
                                            <small id="AntecedentesFamiliaresHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__TipoAfiliacion">
                                            <div class="formulario__grupo-input">
                                                <label for="TipoAfiliacion" class="formulario__label">Tipo de Afiliación *</label>
                                                <select class="form-control" name="TipoAfiliacion" id="TipoAfiliacion" aria-describedby="TipoAfiliacionHelp" required>
                                                    <option value="">Seleccione un Tipo</option>
                                                    <option value="contributivo">Contributivo</option>
                                                    <option value="subsidiado">Subsidiado</option>
                                                    <option value="otro">Otro</option>
                                                </select>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Seleccione un tipo de afiliación válido</p>
                                            <small id="TipoAfiliacionHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__Peso">
                                            <div class="formulario__grupo-input">
                                                <label for="Peso" class="formulario__label">Peso (kg) *</label>
                                                <input type="number" class="form-control" name="Peso" id="Peso" aria-describedby="PesoHelp" placeholder="Ingrese su peso en kg" required/>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Ingrese un peso válido</p>
                                            <small id="PesoHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__Altura">
                                            <div class="formulario__grupo-input">
                                                <label for="Altura" class="formulario__label">Altura (m) *</label>
                                                <input type="text" class="form-control" name="Altura" id="Altura" aria-describedby="AlturaHelp" placeholder="Ingrese su altura en metros" required/>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Ingrese una altura válida</p>
                                            <small id="AlturaHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="form-group formulario__grupo" id="grupo__IMC">
                                            <div class="formulario__grupo-input">
                                                <label for="IMC" class="formulario__label">IMC *</label>
                                                <input type="number" class="form-control" name="IMC" id="IMC" aria-describedby="IMCHelp" placeholder="Ingrese IMC" readonly required/>
                                                <i class="formulario__validacion-estado fas fa-times-circle"></i>
                                            </div>
                                            <p class="formulario__input-error">Ingrese un IMC válido</p>
                                            <small id="IMCHelp" class="form-text text-muted"><br></small>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div>
                                <button type="button" class="btn btn-primary next action-button float-end" id="btnRegistrar" onclick="registrar()">Registrar</button>
                                <a href="../beneficiarios"><button type="button" name="Cancelar" class="btn btn-dark previous action-button-previous float-end me-1" value="Previous">Cancelar</button></a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Fin contenido -->

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> footer}}
    </footer>
    <!-- Footer Section End -->

    <script src="../assets/js/FuncionesBeneficiarios/funcionesRegistrarBeneficiario.js"></script>
    <script src="../assets/js/FuncionesBeneficiarios/FormBeneficiario.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</body>
</html>
