<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ejercicios</title>
    {{> header}}
    <link rel="stylesheet" href="../assets/css/ejercicios.css">
    <link rel="stylesheet" href="../assets/css/validacionesForms.css" />


    <style>
        #descripcionColumna {
            width: 400px; /* Ajusta el ancho según sea necesario */
        }
    </style>

    
</head>
<body class="  ">
        <!-- Inicio del cargar -->
    <div id="loading">
      <div class="loader simple-loader">
          <div class="loader-body">
          </div>
      </div>    </div>
    <!-- Fin cargar -->

    <!-- Inicio Barra lateral -->

        {{> sidebar}}    
 
    <!-- Fin Barra lateral -->


    <!-- Inicio Barra superior -->
        {{> topbar}}
    <!-- Fin Barra superior -->

              
    <!-- Inicio contenido -->      
    <div class="container-fluid content-inner">
            <div class="card-header py-2">
                    <h2 class="m-2 font-weight-bold text-primary">Ejercicios</h2>
            </div>
        <div class="container-fluid">
            <!-- DataTales Example -->
            <div class="card shadow mb-4">
                
                <div class="card-body">
                    
                    <div class="table-responsive">
                        <div id="dataTable_wrapper" class="dataTables_wrapper dt-bootstrap4">
                            <div class="card-header py-3 d-flex justify-content-between">
                            <div class="d-flex">
                                <div class="col-sm-16 col-md-8">
                                <div id="dataTable_filter" class="dataTables_filter">
                                </div>
                            </div>
                                                    </div>
                            <div class="footer-buttons mt-1">
                                <a href="#" type="button" name="Cancelar" id="EjercicioBtnPermiso"
                                    class="btn btn-danger previous action-button-previous float-end me-2"
                                    data-bs-toggle="modal" data-bs-target="#registroModal">
                                    Crear Ejercicio +
                                </a>
                            </div>
                        </div>
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered dataTable" id="tablaEjercicios" width="100%"
                                        cellspacing="0" role="grid" aria-describedby="dataTable_info"
                                        style="width: 100%;">
                                        <thead>
                                            <tr role="row">
                                                <th class="sorting sorting_asc" tabindex="0" aria-controls="dataTable"
                                                    rowspan="1" colspan="1" aria-sort="ascending"
                                                    aria-label="Name: activate to sort column descending"
                                                    style="width: 156.25px;">Nombre Ejercicio</th>
                                                <th id="descripcionColumna">
                                                    Descripción</th>
                                                <th class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                                    colspan="1" aria-label="Salary: activate to sort column ascending"
                                                    style="width: 93.0156px;">Repeticiones</th>
                                                <th id="PermisoHeaderEjericios" class="sorting" tabindex="0" aria-controls="dataTable" rowspan="1"
                                                    colspan="1" aria-label="Salary: activate to sort column ascending"
                                                    style="width: 93.0156px;">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody id="contenidoEjercicios">                        
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
       </div>  
    </div>

<!-- Modal -->

<!-- Modal de Registro/Edición -->
<div class="modal fade" id="registroModal" tabindex="-1" aria-labelledby="registroModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="modalTitle">Crear Ejercicio</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form class="formularioRegistro" id="formularioRegistro">
                    <div class="form-card text-start">
                        <div class="row">
                            <!-- Nombre Ejercicio -->
                            <div class="col-md-6">
                                <div class="form-group formularioRegistro__grupo" id="grupo__nombreEjercicio">
                                    <div class="formularioRegistro__grupo-input">
                                        <label class="nombreRutina formularioRegistro__label">Nombre Ejercicio*</label>
                                        <input type="text" class="form-control" name="nombreEjercicio" required>
                                        <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                    </div>
                                    <p class="formularioRegistro__input-error">Ingrese el nombre del ejercicio correctamente</p>
                                </div>
                            </div>
                            <!-- Repeticiones -->
                            <div class="col-md-6">
                                <div class="form-group formularioRegistro__grupo" id="grupo__repeticiones">
                                    <div class="formularioRegistro__grupo-input">
                                        <label class="repeticiones formularioRegistro__label">Repeticiones*</label>
                                        <input type="number" class="form-control" name="repeticiones" required>
                                        <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                    </div>
                                    <p class="formularioRegistro__input-error">Ingrese las repeticiones correctamente</p>
                                </div>
                            </div>
                        </div>
                        <!-- Descripción -->
                        <div class="row mt-3">
                            <div class="col-md-12">
                                <div class="form-group formularioRegistro__grupo" id="grupo__descripcionEjercicio">
                                    <div class="formularioRegistro__grupo-input">
                                        <label class="nombreRutina formularioRegistro__label">Descripción*</label>
                                        <textarea class="form-control" name="descripcionEjercicio" rows="3" required></textarea>
                                        <i class="formularioRegistro__validacion-estado fas fa-times-circle"></i>
                                    </div>
                                    <p class="formularioRegistro__input-error">Ingrese la descripción correctamente</p>
                                </div>
                            </div>
                        </div>
                        <!-- Estado y Botones -->
                        <div class="row mt-3">
                            <div class="col-md-4">
                                <div class="form-group formularioRegistro__grupo" id="grupo__estado">
                                    <div class="formularioRegistro__grupo-input">
                                        <label class="estado formularioRegistro__label">Estado*</label>
                                        <select class="form-select" name="estado" required>
                                            <option value="1">Activo</option>
                                            <option value="0">Inactivo</option>
                                        </select>
                                    </div>
                                    <p class="formularioRegistro__input-error">Seleccione el estado del ejercicio</p>
                                </div>
                            </div>
                            <div class="col-md-8">
                                <div class="d-flex justify-content-end align-items-center">
                                    <input type="hidden" id="ejercicioId" name="ejercicioId">
                                    <button type="submit" class="btn btn-primary" id="guardarBtn">Guardar</button>
                                    <button type="button" class="btn btn-dark ms-2" data-bs-dismiss="modal">Cancelar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



    <!-- Fin contenido --> 

    <!-- Footer Section Start -->
    <footer class="footer">
        {{> copyright}}
    </footer>
    <!-- Footer Section End -->
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="../../assets/js/ejercicios/tablaEjercicios.js" defer></script>
    <script src="../../assets/js/ejercicios/validacionEjercicios.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>    

    {{> footer}}
</body>
</html>